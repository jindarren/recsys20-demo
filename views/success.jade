doctype html
html
    head
        title MusicBot User Study
        style.
            body{
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                font-family: Lato;
                font-weight: lighter;
            }

            #completionCode{
                text-align: center;
                background-color: #dcd1b2;
            }

            a{
                font-size: xx-large;
            }

            p{
                font-size:200%;
            }

            img{
                width:100%;
            }

            .box {
                font-size: 20px;
                color: #ff000a;
                margin: 10px;
                animation: changeshadow 1s ease-in infinite;
                /* 其它浏览器兼容性前缀 */
                -webkit-animation: changeshadow 1s linear infinite;
                -moz-animation: changeshadow 1s linear infinite;
                -ms-animation: changeshadow 1s linear infinite;
                -o-animation: changeshadow 1s linear infinite;
            }

            @keyframes changeshadow {
                0% {
                    text-shadow: 0 0 4px #ff000a
                }
                50% {
                    text-shadow: 0 0 40px #ff000a
                }
                100% {
                    text-shadow: 0 0 4px #ff000a
                }
            }

            /* 添加兼容性前缀 */
            @-webkit-keyframes changeshadow {
                0% {
                    text-shadow: 0 0 4px #ff000a
                }
                50% {
                    text-shadow: 0 0 40px #ff000a
                }
                100% {
                    text-shadow: 0 0 4px #ff000a
                }
            }

            @-moz-keyframes changeshadow {
                0% {
                    text-shadow: 0 0 4px #ff000a
                }
                50% {
                    text-shadow: 0 0 40px #ff000a
                }
                100% {
                    text-shadow: 0 0 4px #ff000a
                }
            }

            @-ms-keyframes changeshadow {
                0% {
                    text-shadow: 0 0 4px #ff000a
                }
                50% {
                    text-shadow: 0 0 40px #ff000a
                }
                100% {
                    text-shadow: 0 0 4px #ff000a
                }
            }

            @-o-keyframes changeshadow {
                0% {
                    text-shadow: 0 0 4px #ff000a
                }
                50% {
                    text-shadow: 0 0 40px #ff000a
                }
                100% {
                    text-shadow: 0 0 4px #ff000a
                }
            }

    body
        p You have finished the study. Thank you~

        .box#bonus-link
            a(href="/que3") Try bonus questionnaire to get additional rewards :)
        p#requiredTime (only need 6 minutes)
        br
        br
        br
        .row.justify-content-center
            button.btn-primary Get My Completion Code

        #code-box(style="display:none;")
            p Your completion code
            p#completionCode

        br
        br
        br

        div(style='width:20%;height:auto')
            img(src="img/thanks.gif")
        link(href='../bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        script(src = "../jquery/dist/jquery.min.js", charset = 'utf-8')
        script(src = "../bootstrap/dist/js/bootstrap.min.js")
        script(type='text/javascript').
            $(".btn-primary").on("click", function () {
                var completionCode = Math.random().toString(36).slice(-10)
                $("#completionCode").text(completionCode)
                $("#code-box").show()
                $("#bonus-link, .btn-primary, #requiredTime").hide()

                var log = {}
                log.completionCode = completionCode
                log.timestamp = new Date()

                log.id = JSON.parse(window.localStorage.getItem("log")).id

                $.ajax({
                    url: '/updateCode',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(log),
                    dataType: 'json',
                    success: function (data) {
                        console.log(data)
                    },
                    error: function (err) {
                        console.log(err)
                    }
                });

            })



